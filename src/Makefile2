# Compiler settings
CXX = g++
CXXFLAGS = -std=c++11 -Wall

# Directories
SRC_DIR = ../src
OBJ_DIR = obj
BIN_DIR = bin
TARGET = $(BIN_DIR)/simulate_test1

# Source files
ORGANIZER_SRC = $(SRC_DIR)/Organizer/organizer.cpp
HOSPITAL_SRC = $(SRC_DIR)/Hospital/hospital.cpp
PATIENT_SRC = $(SRC_DIR)/Patient/patient.cpp
TEST_SRC = ../tests/simulate_test1.cpp

# Object files
OBJ_FILES = $(OBJ_DIR)/organizer.o $(OBJ_DIR)/hospital.o $(OBJ_DIR)/patient.o $(OBJ_DIR)/simulate_test1.o

# Default target
all: $(TARGET)

# Rule to build the target executable
$(TARGET): $(OBJ_FILES)
	@mkdir -p $(BIN_DIR)
	$(CXX) $(OBJ_FILES) -o $(TARGET)

# Rule to compile organizer.cpp
$(OBJ_DIR)/organizer.o: $(ORGANIZER_SRC)
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Rule to compile hospital.cpp
$(OBJ_DIR)/hospital.o: $(HOSPITAL_SRC)
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Rule to compile patient.cpp
$(OBJ_DIR)/patient.o: $(PATIENT_SRC)
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Rule to compile simulate_test1.cpp
$(OBJ_DIR)/simulate_test1.o: $(TEST_SRC)
	@mkdir -p $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean up generated files
clean:
	@echo "Cleaning up..."
	rm -rf $(BIN_DIR) $(OBJ_DIR)